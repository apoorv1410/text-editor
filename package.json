  "files": [
    "dist",
    "src",
    "public"
  ],
  "types": "dist/index.d.ts",
  "source": "src/index.tsx",
  "dependencies": {
    "@lexical/react": "^0.15.0",
    "@testing-library/jest-dom": "^5.17.0",
